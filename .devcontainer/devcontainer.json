// See https://containers.dev/implementors/json_reference/ for configuration reference
{
  "name": "gemma",
  "dockerComposeFile": "../docker/docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/home/user/gemma",
  "settings": {
    "editor.formatOnSave": true,
    "python.formatting.provider": "black",
    "better-comments.multilineComments": true,
    "better-comments.highlightPlainText": true
  },
  "extensions": [
    // Theme
    "PKief.material-icon-theme", // Material Icon Theme
    "GitHub.github-vscode-theme", // GitHub Theme
    // Python 関係
    "njpwerner.autodocstring", // autoDocstring
    "ms-python.python", // Python
    "ms-python.vscode-pylance", // Pylance
    "KevinRose.vsc-python-indent", // Python Indent
    "ms-python.black-formatter", // Black
    "ms-python.flake8", // flake8
    "ms-python.isort", // isort
    "ms-toolsai.jupyter", // Jupyter
    "magicstack.MagicPython", // MagicPython
    // Web 関係
    "formulahendry.auto-rename-tag", // Auto Rename Tag
    "ms-vscode.live-server", // Live Preview
    "dbaeumer.vscode-eslint", // ESLint
    "dsznajder.es7-react-js-snippets", // ES7 React/Redux/GraphQL/React-Native snippets
    "esbenp.prettier-vscode", // Prettier
    "xabikos.javascriptsnippets", // JavaScript (ES6) code snippets
    // Git 関係
    "eamodio.gitlens", // GitLens
    "mhutchie.git-graph", // Git Graph
    "donjayamanne.githistory", // Git History
    // その他
    "aaron-bond.better-comments", // better-comments
    "streetsidesoftware.code-spell-checker", // Code Spell Checker
    "usernamehw.errorlens", // Error Lens
    "GrapeCity.gc-excelviewer", // Excel Viewer
    "GitHub.copilot", // Github Copilot
    "GitHub.copilot-chat", // Github Copilot Chat
    "oderwat.indent-rainbow", // Indent Rainbow
    "VisualStudioExptTeam.vscodeintellicode", // IntelliCode
    "christian-kohler.path-intellisense", // Path Intellisense
    "shardulm94.trailing-spaces", // Trailing Spaces
    "mosapride.zenkaku", // Zenkaku
  ],
  // VSCodeを閉じた時、コンテナが自動停止するように指定
  "shutdownAction": "stopCompose"
}
